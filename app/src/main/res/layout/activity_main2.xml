<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        android:id="@+id/Textview_email"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Professor E-mail"
        android:textSize="30.dp"
        android:layout_gravity="center"
        android:layout_marginTop="26dp"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginHorizontal="20dp">

            <Button
                android:id="@+id/Pr_Btn_1"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="박상현" />

            <Button
                android:id="@+id/Pr_Btn_2"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="전도현" />

            <Button
                android:id="@+id/Pr_Btn_3"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="정재훈" />

            <Button
                android:id="@+id/Pr_Btn_4"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="전지은" />

            <Button
                android:id="@+id/Pr_Btn_5"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="신정은" />

            <Button
                android:id="@+id/Pr_Btn_6"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="이소망" />

            <Button
                android:id="@+id/Pr_Btn_7"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="김학현" />

            <Button
                android:id="@+id/Pr_Btn_8"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="박보름" />

            <Button
                android:id="@+id/Pr_Btn_9"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:text="손병헌" />


        </LinearLayout>
    </ScrollView>


</LinearLayout>